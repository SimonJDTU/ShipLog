<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    tools:context=".HomeScreen">

    <ImageView
        android:id="@+id/app_logo"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="3dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="-3dp"
        app:srcCompat="@drawable/logo_dansk" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/app_logo"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="90dp"
        android:elevation="2dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/home_trip"
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:layout_margin="5dp"
            android:adjustViewBounds="true"
            android:background="@drawable/button_circle"
            android:cropToPadding="false"
            android:padding="1dp"
            android:scaleType="centerInside"
            android:src="@drawable/new_trip_icon"
            android:text="@string/home_new_trip"
            android:textColor="@android:color/white" />

        <ImageButton
            android:id="@+id/home_settings"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:adjustViewBounds="true"
            android:background="@drawable/button_circle"
            android:cropToPadding="false"
            android:padding="1dp"
            android:scaleType="centerInside"
            android:src="@drawable/settings_icon"
            android:text="@string/home_settings"
            android:textAlignment="center"
            android:textColor="@android:color/white" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/trips_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="26dp" />

</RelativeLayout>